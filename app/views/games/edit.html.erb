<h1 class="header">Changing Something? Edit your collection!!</h1>
<br>
<div class="errors">
<% if @game.errors.any? %>
    <h3>The game wasnt saved because:</h3>
    <ul>
    <li> <%= @game.errors.full_messages.to_sentence %> </li>
    </ul>
<% end %>
</div>
<div>
<%= form_with model: @game, method: :patch, local: true do |f| %> 
<%= f.text_field :title, placeholder: "Game Title" %>
</div>
   
<div>
<%= f.text_field :release_year, placeholder: "Year of Release" %>
</div>
    
<div>
<%= f.text_area :description, size: "30x10", placeholder: "What's it About?" %>
</div>
 
<div>
<%= f.text_field :genre, placeholder: "Genre" %>
</div>
    
<div>
<%= f.text_field :developer, placeholder: "Developer" %>
</div>
  
<div>
<%= f.label :complete, "Finished?" %>
<%= f.check_box :complete %>
</div>

<%= f.submit %>
<% end %>
</div>