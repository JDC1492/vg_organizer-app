<div>
<h1 class="header">New game? Add it to the collection!!</h1>
</div>
<div class="errors">
<% if @game.errors.any? %>
    <h3>The game wasnt saved because:</h3>
    <ul>
    <li> <%= @game.errors.full_messages.to_sentence %> </li>
    </ul>
<% end %>
</div>

<div>
<%= form_with model: @game, local: true do |f| %>

    <%= render partial: 'form', locals: {game: @game, f:f}  %>
    
    <br>
<div class="console">
        <%= f.label :console, "On what console?" %>
        <%= f.fields_for :console, @game.build_console do |console_field| %>
        <%= console_field.text_field :name %>
        <% end %>
        <br>
<%= f.submit %>
<% end %>
</div>




