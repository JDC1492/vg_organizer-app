<% if !current_user.name.nil? %>
    <% binding.pry %>
    <h1>Welcome, <%= current_user.name %>!</h1>
<%  else %>
    <h1>Welcome, <%= current_user.username %>!</h1>

<% end %>
<br>

<h3> Your <%= current_user.games.count %> game listings: </h3>
<div class="list">
<ul>
    <% current_user.games.order('developer ASC').each do |game| %>
    <li><%= link_to game.title + " - Published By " + game.developer , game_path(game) %></li><br>
</ul>
</div>
<% end %>

<h3> Your <%= current_user.consoles.distinct.count %> console listings: </h3>
<div class="list">
<ul>
    <% @consoles.distinct.order('name ASC').each do |c| %>
    <li><%= link_to c.name, user_console_path(current_user, c) %></li><br>
<% end %>
</ul>
</div>

<h3><u> Games That have been completed: </u></h3>
<ul>
<% current_user.games.ar_completed.each do |c|%>
    <li><%= c.title %> </li><br>
    <% end %>
</ul>

<h4><%= link_to "New Game?",  new_user_game_path(current_user) %></h4>

<br><%= link_to "Log Out", destroy_user_session_path, method: :delete %> 
